.fengeline{
  width:100%;
  height:30px;
  margin:10px auto;
  color:#8077fc;
  text-align: center;
  position:relative;
  padding:0 10px;
  box-sizing: border-box;
  -webkit-box-sizing: border-box;
}
.fengeline::before{
  content: " ";
  width:100%;
  height:2px;
  display: inline-block;
  border-top:1px solid #8077fc;
  position:absolute;
  bottom:50%;
  left:0;
  transform: translateY(-50%);
  z-index: -1;
}
.fengeline text{
  color:#8077fc;
  font-size:14px;
  padding:0 10px;
  background:#fff;
}
