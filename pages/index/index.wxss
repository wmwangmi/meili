}

.index-swiper .wx-swiper-dot{
    width:20rpx;
    display: inline-flex;
    height: 20rpx;
    margin-left: 10rpx;
    background-color:rgba(255, 255, 255, 0);
    justify-content:space-between;
}
.index-swiper .wx-swiper-dot::before{
    content: '';
    flex-grow: 1; 
    border:1px solid #fff;
    background-color:rgba(255, 255, 255, 0);
    border-radius: 100%
}
.index-swiper .wx-swiper-dot-active::before{
