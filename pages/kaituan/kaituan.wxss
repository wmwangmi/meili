/* pages/kaituan/kaituan.wxss */
@import "../static/default.wxss";
.ktcontain{
  width:100%;
  min-height:100vh;
  overflow: hidden;
  background:#f8f7f7;
  text-align: center;
}
.kttop{
  width:100%;
  height:95rpx;
  line-height:95rpx;
  background:#fff;
  display: flex;
  -webkit-display:flex;
  justify-content: center;
  align-content: center;
  margin-bottom:20rpx;
}
.kttop .nav{
  height:30rpx;
  overflow:visible;
  line-height:60rpx;
  flex-grow: 2;
  font-size:15px;
  color:#7c7b7c;
  text-align: center;
  text-shadow: 1px 1px 1px #eee;
  margin:10px auto;
  vertical-align: middle;
}
.ktxian{
  font-size:12px;
  color:#8077fc;
}
.kttop .nav text{
  flex-grow: 2;
}
.kttop .nav image{
  width:25rpx;
  margin-left:15rpx;flex-grow: 2;
}

.ktls{
  background:#fff;
  text-align: left;
  margin:10rpx auto;
  display: flex;
  display: -webkit-flex;
  justify-content: flex-start;
  padding:10px;
  box-sizing: border-box;
  -webkit-box-sizing: border-box;
}
.ktleft{
  flex-grow: 12;
}
.ktleft image{
  width:100%;
}
.ktright{
  flex-grow: 3;
  margin-left: 40rpx;
}
.ktright .kttt{
  font-size:15px;
  color:#7c7b7c;
}
.ktright .ktxxq{
  height:25px;
  line-height:25px;
  padding:0 10rpx;
  background:#8077fc;
  display:inline-block;
  color:#fff;
  font-size:13px;
  margin:13rpx auto;
}
.ktright .ktprice{
  color:#7c7b7c;
  font-size:13px;
  margin-bottom:5rpx;
}
.ktright .ktprice b{
  color:#8077fc;
}
.ktright .ktprice text:nth-child(2){
  text-decoration: line-through;
}
.ktright .kthref{
  width:40%;
  height:30px;
  line-height:30px;
  margin-top:5rpx;
  text-align: center;
  font-size:14px;
  border:1px solid #8077fc;
  border-radius: 3px;
  -webkit-border-radius:3px;
  color:#8077fc;
}